<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MetroCentreAutoWorld</title>

    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/ekko-lightbox/ekko-lightbox.css" asp-append-version="true">

    <link href="//fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet" asp-append-version="true">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container header-content">
        <br />
        <a asp-page="/">
            <img src="~/images/MetroCentreAutoWorldLogo2018.png" class="img-fluid mx-auto d-block" alt="Metro Centre Auto World">
        </a>
    </div>
    <div class="container header-content">
        <div class="row">
            <div class="col-md text-center">
                <a href="tel:0191%204605070">
                    <h5><i class="fas fa-phone"></i> 0191 4605070</h5>
                </a>
            </div>
            <div class="col-md text-center">
                <a href="mailto:sales@mainlineuk.com?Query%20from%20Website">
                    <h5><i class="fas fa-envelope"></i> sales@mainlineuk.com</h5>
                </a>
            </div>
        </div>
        <br />
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">MetroCentreAutoWorld</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-page="/Index" class="nav-link"><i class="fas fa-car"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/CarsForSale" class="nav-link"><i class="fas fa-car"></i> Cars For Sale</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/About" class="nav-link"><i class="fas fa-car"></i> About</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Testimonials" class="nav-link"><i class="fas fa-car"></i> Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Contact" class="nav-link"><i class="fas fa-car"></i> Contact</a>
                    </li>
                </ul>
                <!--<partial name="_LoginPartial" />-->
            </div>
        </div>
    </nav>

    <!--<partial name="_CookieConsentPartial" />-->

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018-2021 - MetroCentreAutoWorld</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/momentjs/moment-with-locales.min.js" asp-append-version="true"></script>
    <script src="~/lib/marked/marked.min.js" asp-append-version="true"></script>
    <script src="~/lib/ekko-lightbox/ekko-lightbox.min.js" asp-append-version="true"></script>
    <script src="~/lib/ScrollMagic/ScrollMagic.min.js" asp-append-version="true"></script>

    <environment include="Development">
        <script src="~/lib/ScrollMagic/plugins/debug.addIndicators.js" asp-append-version="true"></script>
    </environment>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
